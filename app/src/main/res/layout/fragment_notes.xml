        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#03514A"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp"/>

